class Solution {
  public:
    int minDifference(vector<string> &arr) {
        vector<int> seconds;

        // Helper lambda to convert time string to seconds
        auto timeToSeconds = [](const string &time) {
            int h = stoi(time.substr(0, 2));
            int m = stoi(time.substr(3, 2));
            int s = stoi(time.substr(6, 2));
            return h * 3600 + m * 60 + s;
        };

        // Convert each time to seconds
        for (const string &time : arr) {
            seconds.push_back(timeToSeconds(time));
        }

        // Sort the times
        sort(seconds.begin(), seconds.end());

        int minDiff = INT_MAX;
        int n = seconds.size();

        // Find difference between adjacent times
        for (int i = 1; i < n; ++i) {
            minDiff = min(minDiff, seconds[i] - seconds[i - 1]);
        }

        // Check circular difference between last and first
        int circularDiff = 86400 - seconds[n - 1] + seconds[0];
        minDiff = min(minDiff, circularDiff);

        return minDiff;
    }
};

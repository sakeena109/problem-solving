class Solution {
  public:
    long long subarraySum(vector<int>& arr) {
        long long total = 0;
        int n = arr.size();

        for (int i = 0; i < n; i++) {
            long long contribution = (long long)arr[i] * (i + 1) * (n - i);
            total += contribution;
        }

        return total;
    }
};

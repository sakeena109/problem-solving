class Solution {
    // Function to remove duplicates from the given sorted array.
    ArrayList<Integer> removeDuplicates(int[] arr) {
        ArrayList<Integer> result = new ArrayList<>();
        int n = arr.length;
        if (n == 0) return result;

        result.add(arr[0]); // first element is always unique

        for (int i = 1; i < n; i++) {
            if (arr[i] != arr[i - 1]) {
                result.add(arr[i]); // add only if different from previous
            }
        }
        return result;
    }
}

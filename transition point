class Solution {
  public:
    int transitionPoint(vector<int>& arr) {
        int low = 0, high = arr.size() - 1;
        int result = -1;

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] == 1) {
                result = mid;
                high = mid - 1; // try to find earlier 1
            } else {
                low = mid + 1; // skip zeros
            }
        }

        return result;
    }
};
